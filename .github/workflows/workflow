name: Deploy with Index

on:
  push:
    branches: ["main"]  # Change this if your branch is named 'master'
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Generate Index HTML
        run: |
          # Start the HTML file
          echo "<!DOCTYPE html><html><head><title>File Index</title><style>body{font-family:sans-serif;max-width:800px;margin:20px auto;padding:20px;line-height:1.6} a{text-decoration:none;color:#0366d6} a:hover{text-decoration:underline} li{margin:5px 0}</style></head><body><h1>Directory Index</h1><ul>" > index.html
          
          # Find all HTML files, sort them, and add to list
          # We exclude index.html to prevent a self-link
          find . -name "*.html" -not -name "index.html" | sort | while read file; do
            # Strip the leading ./ for a cleaner display name
            clean_name=${file#./}
            echo "<li><a href=\"$file\">$clean_name</a></li>" >> index.html
          done
          
          # Close the HTML tags
          echo "</ul></body></html>" >> index.html

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: '.'

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
